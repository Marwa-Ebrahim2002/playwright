{
  "name": "playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
"scripts": {
    "clean:reports": "rimraf allure-report allure-results && mkdirp allure-results allure-report",
    "generate:reports": "npx allure generate ./allure-results --clean",
    "open:reports": "npx allure open ./allure-report",
    "pretest": "npm run clean:reports",
    "posttest": "npm run generate:reports && npm run open:reports",
    "run:tests": "npx playwright test pom",
    "test": "npm run run:tests"
},
